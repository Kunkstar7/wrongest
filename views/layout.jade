        div(class="navbar navbar-default navbar-fixed-top", role="navigation")
            div.container
                div.navbar-header
                    a(class="navbar-brand", href="#") Wrongest Words
                
                div(class="navbar-collapse collapse")
                    ul(class="nav navbar-nav")
