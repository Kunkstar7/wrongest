html(ng-app='wrong')
    head
        meta(charset='utf8')
        base(href='/')
        title Wrong Words
        link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css')
        link(rel='stylesheet', href='/css/core.css')
        //link(rel='stylesheet', href='/css/wrong.css')
        
